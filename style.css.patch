.log-panel {
    background-color: var(--color-surface);
    border: 2px solid var(--color-primary);
    border-radius: 8px;
    padding: 15px;
    margin-bottom: 20px;
}

.log-title {
    color: var(--color-primary);
    font-weight: bold;
    margin-bottom: 10px;
    font-size: 14px;
}

.log-content {
    background-color: var(--color-bg);
    border-radius: 6px;
    padding: 12px;
    max-height: 125px;
    overflow-y: auto;
    font-size: 12px;
    line-height: 1.6;
}

.log-entry {
    margin-bottom: 6px;
    padding-bottom: 6px;
    border-bottom: 1px solid rgba(45, 184, 198, 0.1);
}

.log-entry.info { color: var(--color-primary); }
.log-entry.danger { color: var(--color-accent); }
.log-entry.success { color: var(--color-success); }

/* --- Modal 查看功能 (全局) --- */
.modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.85);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 2000;
    backdrop-filter: blur(5px);
}

.modal-overlay.active {
    display: flex;
}

.modal-content-view {
    background: #1a1a1a;
    width: 90%;
    max-width: 800px;
    max-height: 80vh;
    padding: 30px;
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 40px rgba(0,0,0,0.5);
    overflow-y: auto;
}

.deck-view-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(110px, 1fr));
    gap: 15px;
    margin-top: 20px;
}
